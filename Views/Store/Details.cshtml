@model ProductDto
@{
}

<style>
    .DetailImg{
        transition-duration:0.5s;
        cursor:zoom-in;
    }
    .DetailImg:active{
        transform:scale(1.2);

    }
</style>
<div class="row">
    <div class="cool-md-8 mx-0 align-self-auto rounded border p-3">
        <h2 class="text-center mb-5">Product Description</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-8">
                    <img class="DetailImg" src="~/assets/@ViewData["ImageFileName"]" width="600" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" readonly>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Brand" readonly>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <input class="form-select" asp-for="Category" readonly>
 
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Price" readonly>
                    
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description" readonly></textarea>
                    
                </div>
            </div>



    

          

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button  class="btn btn-primary">Buy</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Store" asp-action="Index" role="button">
                        Back to Shop
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>